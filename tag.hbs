{{!< default}}

{{#contentFor 'title'}}{{ meta_title }}{{/contentFor}}

{{#tag}}
  <div class='o-grid'>
    <div class='o-grid__col o-grid__col--center o-grid__col--9-10-m o-grid__col--2-3-l'>
      <div class='c-archive'>
        {{#if feature_image}}
          <div class='c-archive__image'>
            <img src='{{ feature_image }}' alt='{{ name }}' class='c-archive__image-img' />
          </div>
        {{/if}}
        <h1 class='c-archive__title'>{{ name }}</h1>
        {{#if description}}
          <p class='c-archive__description'>{{ description }}</p>
        {{/if}}
      </div>
    </div>
  </div>
{{/tag}}

<div class='o-grid'>
  <div class='o-grid__col o-grid__col--center o-grid__col--9-10-m o-grid__col--2-3-l'>
    {{> loop }}
  </div>
</div>

<div class='o-grid'>
  {{ pagination }}
</div>

{{> subscribe-box }}